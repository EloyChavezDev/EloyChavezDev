---
import Icon from "astro-icon";

export type Props = {
	title: string;
	imageSource: string;
	description: string;
	href: string;
	demo: string | null;
	source: string;
};

const props = Astro.props as Props;
---

<div class="overflow-hidden text-left bg-white shadow-sharp border-solid border-2 border-slate-900">
	<img
		class="relative block w-full h-48 object-cover bg-white z-[2] border-b-2 border-slate-900"
		src={props.imageSource}
		alt={props.title}
		loading="lazy"
	/>
	<div class="grid grid-rows-[auto_6rem_1fr] p-4">
		<a
			data-sveltekit-prefetch
			rel="prefetch"
			href={props.href}
			class="no-underline text-slate-800 md:hover:(text-slate-700) text-xl font-heading font-semibold leading-normal transition-[all_ease-out_0.2s]"
		>
			{props.title}
		</a>
		<p class="font-sans leading-normal text-slate-700 mb-2 mb-4 text-base">
			{props.description}
		</p>
		<div class="flex justify-end gap-3 mt-2">
			<a
				class="font-heading no-underline flex items-center gap-2 transition-[filter_ease-out_0.2s] transition-all ease-out text-slate-900 hover:-translate-y-1"
				href={props.source}
				target="_blank"
				rel="norel noreferrer"
			>
				<Icon class="w-6 h-6" name="fe:github" />
			</a>
			{
				props.demo !== null && (
					<a
						class="font-heading no-underline flex items-center gap-2 transition-[filter_ease-out_0.2s] transition-all ease-out text-slate-900 hover:-translate-y-1"
						href={props.demo ? props.demo : "#"}
						target="_blank"
						rel="norel noreferrer"
					>
						<Icon class="w-6 h-6" name="mdi:launch" />
					</a>
				)
			}
		</div>
	</div>
</div>
