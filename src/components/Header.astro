---
import Icon from "astro-icon";
import data from "~/data/sites";
import HandIcon from "~/icons/HandIcon.svelte";
import ChangingText from "~/components/ChangingText.svelte";
import MovingCircle from "./MovingCircle.svelte";

type Social = {
	url: string;
	icon: string;
};

const socials: Social[] = [
	{ url: data.github, icon: "mdi:github" },
	{ url: data.twitter, icon: "mdi:twitter" },
	{ url: `mailto:${data.email}`, icon: "mdi:mail" },
];
---

<MovingCircle client:only />

<section class="h-full relative p-8 md:p-16 lg:p-20">
	<div class="font-heading flex items-center gap-2 text-black">
		<HandIcon className="w-12 h-12" />
		<span class="text-2xl md:text-3xl lg:text-5xl font-medium whitespace-nowrap">Hey there! I am</span>
	</div>
	<span class="font-heading text-5xl lg:text-7xl font-bold block leading-normal lg:leading-relaxed text-black"> Dicha Zelianivan Arkana</span>
	<ChangingText client:load />
	<div class="fixed right-8 bottom-20 lg:bottom-0 flex flex-col items-center gap-6">
		<div class="flex flex-col gap-4 lg:gap-6">
			{
				socials.map((social) => (
					<a href={social.url}>
						<Icon name={social.icon} class="w-6 h-6 lg:w-8 lg:h-8 text-black" />
					</a>
				))
			}
		</div>
		<div class="h-20 lg:h-28 w-1 bg-black"></div>
	</div>
</section>
